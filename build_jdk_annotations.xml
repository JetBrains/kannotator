<project name="Build JDK Annotations" default="pack_annotations">

    <property file="manifest.properties" />

    <property name="build.number" value="@snapshot@"/>

    <property name="lib.jar"
              value="lib/jdk/jre-7u12-windows-rt.jar" />
    <property name="customization.dir"
              value="jdk-custom" />
    <property name="xml.annotations.out.dir"
              value="jdk-annotations-snapshot" />
    <property name="jaif.name"
              value="kotlin-jdk-annotations" />

    <property name="annotations-jar"
              value="${basedir}/out/artifacts/annotations/kotlin-jdk-annotations.jar"/>

    <target name="prepare_xml_annotations">
        <ant antfile="infer_annotations.xml"/>
    </target>

    <target name="pack_annotations" depends="prepare_xml_annotations">
        <jar destfile="${annotations-jar}" basedir="${xml.annotations.out.dir}">
            <manifest>
                <attribute name="Built-By" value="${manifest.impl.vendor}"/>

                <attribute name="Implementation-Vendor" value="${manifest.impl.vendor}"/>
                <attribute name="Implementation-Title" value="${manifest.impl.title.kotlin.compiler.annotations.jdk}"/>
                <attribute name="Implementation-Version" value="${build.number}"/>
            </manifest>
        </jar>
        <delete dir="${xml.annotations.out.dir}" failonerror="true"/>
    </target>
</project>
